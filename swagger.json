            "example": "12121111121sssd11"
          },
          "user": {
            "balance": {
              "type": "integer",
              "description": "User's balance",
              "example": "887878"
            },
            "name": {
              "type": "string",
              "description": "User's name",
              "example": "userstest"
            }
          }
        },
        "example": {
          "token": "121545sddd44",
          "user": {
            "balance": "8989898",
            "name": "userstest"
          }
        }
      },
      "CurrentUserResponse": {
        "type": "object",
